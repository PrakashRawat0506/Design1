<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAsk"
        android:layout_width="@dimen/eightyeight_dp"
        android:layout_height="@dimen/thirtysix_dp"
        android:background="@drawable/btn_boatdetails_ask"
        android:gravity="center"
        android:text="@string/ask"
        android:drawableStart="@drawable/ic_ask"
        android:paddingLeft="@dimen/sixteen_dp"
        android:paddingRight="@dimen/sixteen_dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonMakeOffer"
        android:layout_width="@dimen/onethirtysix_dp"
        android:layout_height="@dimen/thirtysix_dp"
        android:background="@drawable/btn_boatdetails_makeoffer"
        android:text="@string/make_offer"
        android:drawableStart="@drawable/ic_offer"
        android:paddingLeft="@dimen/sixteen_dp"
        android:paddingRight="@dimen/sixteen_dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/buttonCall"
        app:layout_constraintStart_toEndOf="@+id/buttonAsk"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonCall"
        android:layout_width="@dimen/eightyeight_dp"
        android:layout_height="@dimen/thirtysix_dp"
        android:background="@drawable/btn_boatdetails_call"
        android:gravity="center"
        android:drawableStart="@drawable/ic_call"
        android:text="@string/call"
        android:paddingLeft="@dimen/sixteen_dp"
        android:paddingRight="@dimen/sixteen_dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>